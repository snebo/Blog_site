<%= form_with model: article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% article.errors.full_message_for(:title).each do |message| %>
      <div>
        <%= message %>
      </div>
    <%end%>
  </div>
  <div>
    <%form.label :body %><br>
    <%form.text_area :body %>
    <%article.error.full_message_for(:body).each do |message| %>
      <div>
        <%message %>
      </div>
    <%end%>
  </div>
  <div><%= form.submit %></div>
<%end%>
